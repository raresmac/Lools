@page "/"
@inject NavigationManager Nav

<div class="min-h-screen bg-slate-950 text-white font-sans selection:bg-blue-500/30 overflow-x-hidden relative p-6 md:p-12">

    @* --- HERO HEADER --- *@
    <div class="max-w-[1200px] mx-auto text-center mb-16 relative z-10">
        <h1 class="text-6xl md:text-8xl font-black tracking-tighter italic text-transparent bg-clip-text bg-gradient-to-r from-blue-500 via-indigo-400 to-red-500 uppercase leading-none">
            LOOLS
        </h1>
        <div class="h-1.5 w-48 bg-gradient-to-r from-blue-600 to-red-600 mx-auto mt-4 rounded-full shadow-[0_0_20px_rgba(59,130,246,0.5)]"></div>
        <p class="mt-6 text-slate-500 font-bold uppercase tracking-[0.4em] text-xs md:text-sm">Strategic Asset Management Dashboard</p>
    </div>

    @* --- TOOL GRID --- *@
    <div class="max-w-[1200px] mx-auto grid grid-cols-1 md:grid-cols-2 gap-8">

        @* 1. SUMMONER TRACKER CARD *@
        <div @onclick='() => Nav.NavigateTo("summoner-timer")'
             class="group cursor-pointer bg-slate-900/50 border border-slate-800 rounded-[2.5rem] p-8 transition-all hover:border-blue-500 hover:bg-slate-900 shadow-2xl hover:shadow-blue-900/20 relative overflow-hidden">

            @* Decoration Icon *@
            <div class="absolute -right-8 -top-8 text-blue-500/5 group-hover:text-blue-500/10 transition-colors">
                <svg class="w-48 h-48" fill="currentColor" viewBox="0 0 24 24"><path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            </div>

            <div class="relative z-10">
                <div class="w-16 h-16 bg-blue-600/10 rounded-2xl flex items-center justify-center border border-blue-500/30 group-hover:bg-blue-600 transition-all text-blue-500 group-hover:text-white mb-6 shadow-lg">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                </div>

                <h2 class="text-3xl font-black italic uppercase tracking-tighter mb-2 group-hover:text-blue-400 transition-colors">Summoner Tracker</h2>
                <p class="text-slate-400 font-medium text-sm leading-relaxed mb-8">
                    High-precision tracking for enemy Summoner Spells, Ultimates, and Jungle Buffs. Features imminent threat pulsing and precision time adjustments.
                </p>

                <div class="flex items-center gap-3">
                    <span class="px-3 py-1 bg-slate-950 border border-slate-800 rounded-full text-[9px] font-black uppercase tracking-widest text-blue-500">Live HUD</span>
                    <span class="px-3 py-1 bg-slate-950 border border-slate-800 rounded-full text-[9px] font-black uppercase tracking-widest text-blue-500">Precision Arrows</span>
                </div>
            </div>

            @* Bottom Bar Decor *@
            <div class="absolute bottom-0 left-0 right-0 h-1.5 bg-blue-600 translate-y-full group-hover:translate-y-0 transition-transform"></div>
        </div>

        @* 2. JUNGLE RADAR CARD *@
        <div @onclick='() => Nav.NavigateTo("jungle-heatmap")'
             class="group cursor-pointer bg-slate-900/50 border border-slate-800 rounded-[2.5rem] p-8 transition-all hover:border-red-500 hover:bg-slate-900 shadow-2xl hover:shadow-red-900/20 relative overflow-hidden">

            @* Decoration Icon *@
            <div class="absolute -right-8 -top-8 text-red-500/5 group-hover:text-red-500/10 transition-colors">
                <svg class="w-48 h-48" fill="currentColor" viewBox="0 0 24 24"><path d="M9 20l-5.447-2.724A2 2 0 013 15.382V6.618a2 2 0 011.553-1.944L9 3m6 0l5.447 2.724A2 2 0 0121 7.618v8.764a2 2 0 01-1.553 1.944L15 20m-6 0V3m6 0v17" /></svg>
            </div>

            <div class="relative z-10">
                <div class="w-16 h-16 bg-red-600/10 rounded-2xl flex items-center justify-center border border-red-500/30 group-hover:bg-red-600 transition-all text-red-500 group-hover:text-white mb-6 shadow-lg">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9 20l-5.447-2.724A2 2 0 013 15.382V6.618a2 2 0 011.553-1.944L9 3m6 0l5.447 2.724A2 2 0 0121 7.618v8.764a2 2 0 01-1.553 1.944L15 20m-6 0V3m6 0v17" /></svg>
                </div>

                <h2 class="text-3xl font-black italic uppercase tracking-tighter mb-2 group-hover:text-red-400 transition-colors">Jungle Radar</h2>
                <p class="text-slate-400 font-medium text-sm leading-relaxed mb-8">
                    Predict enemy jungler positioning using movement-speed based threat expansion. See exactly where they could be in the Fog of War.
                </p>

                <div class="flex items-center gap-3">
                    <span class="px-3 py-1 bg-slate-950 border border-slate-800 rounded-full text-[9px] font-black uppercase tracking-widest text-red-500">Heatmap Prediction</span>
                    <span class="px-3 py-1 bg-slate-950 border border-slate-800 rounded-full text-[9px] font-black uppercase tracking-widest text-red-500">Speed Profiles</span>
                </div>
            </div>

            @* Bottom Bar Decor *@
            <div class="absolute bottom-0 left-0 right-0 h-1.5 bg-red-600 translate-y-full group-hover:translate-y-0 transition-transform"></div>
        </div>

        @* 3. TEAM ANALYZER CARD *@
        <div @onclick='() => Nav.NavigateTo("team-analyzer")'
             class="group cursor-pointer bg-slate-900/50 border border-slate-800 rounded-[2.5rem] p-8 transition-all hover:border-indigo-500 hover:bg-slate-900 shadow-2xl hover:shadow-indigo-900/20 relative overflow-hidden">

            <div class="absolute -right-8 -top-8 text-indigo-500/5 group-hover:text-indigo-500/10 transition-colors">
                <svg class="w-48 h-48" fill="currentColor" viewBox="0 0 24 24"><path d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z" /></svg>
            </div>

            <div class="relative z-10">
                <div class="w-16 h-16 bg-indigo-600/10 rounded-2xl flex items-center justify-center border border-indigo-500/30 group-hover:bg-indigo-600 transition-all text-indigo-500 group-hover:text-white mb-6 shadow-lg">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z" /></svg>
                </div>

                <h2 class="text-3xl font-black italic uppercase tracking-tighter mb-2 group-hover:text-indigo-400 transition-colors">Team Analyzer</h2>
                <p class="text-slate-400 font-medium text-sm leading-relaxed mb-8">
                    Compare team compositions using dynamic radar charts. Identify win conditions and power-spikes before the game starts.
                </p>

                <div class="flex items-center gap-3">
                    <span class="px-3 py-1 bg-slate-950 border border-slate-800 rounded-full text-[9px] font-black uppercase tracking-widest text-indigo-500">Radar Logic</span>
                    <span class="px-3 py-1 bg-slate-950 border border-slate-800 rounded-full text-[9px] font-black uppercase tracking-widest text-indigo-500">Win-Con AI</span>
                </div>
            </div>
            <div class="absolute bottom-0 left-0 right-0 h-1.5 bg-indigo-600 translate-y-full group-hover:translate-y-0 transition-transform"></div>
        </div>

    </div>
</div>