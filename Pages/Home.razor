@page "/"

<PageTitle>League Dashboard - Home</PageTitle>

<div class="min-h-screen bg-slate-950 flex flex-col items-center justify-center p-6 text-white font-sans">

    <div class="max-w-5xl w-full text-center space-y-12">

        @* Title Section *@
        <div class="animate-in fade-in slide-in-from-bottom-4 duration-700">
            <h1 class="text-7xl font-black tracking-tighter italic text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-teal-400 to-blue-600 uppercase">
                League Dashboard
            </h1>
            <p class="text-slate-500 font-medium uppercase tracking-widest text-sm mt-4">Master your match with strategic tools</p>
            <div class="h-1 w-24 bg-blue-500 mx-auto mt-6 rounded-full shadow-[0_0_15px_#3b82f6]"></div>
        </div>

        @* Tools Grid *@
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-12">

            @* Summoner Timer Card *@
            <NavLink href="summoner-timer" class="group relative block bg-slate-900 rounded-3xl overflow-hidden border border-slate-800 shadow-2xl transition-all hover:border-blue-500/50 hover:scale-[1.02] hover:shadow-blue-500/10">

                @* Card Image/Icon Area *@
                <div class="h-56 bg-gradient-to-br from-blue-600/20 to-slate-900 flex items-center justify-center relative overflow-hidden">
                    @* Decorative background pulse *@
                    <div class="absolute inset-0 bg-blue-500/5 blur-3xl group-hover:bg-blue-500/10 transition-colors"></div>

                    @* Icon *@
                    <div class="relative z-10 p-6 bg-slate-950 rounded-2xl border border-blue-500/30 group-hover:border-blue-400 transition-all shadow-2xl">
                        <svg class="w-16 h-16 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>

                    @* "Flash" effect on hover *@
                    <div class="absolute -inset-full h-full w-1/2 z-20 block transform -skew-x-12 bg-gradient-to-r from-transparent via-white/5 to-transparent opacity-0 group-hover:animate-[shine_1s_ease-in-out]"></div>
                </div>

                @* Card Content *@
                <div class="p-8 text-left">
                    <div class="flex items-center justify-between mb-3">
                        <h2 class="text-2xl font-black text-white group-hover:text-blue-400 transition-colors uppercase italic tracking-tight">
                            Summoner Tracker
                        </h2>
                        <span class="px-2 py-1 bg-blue-500/10 border border-blue-500/20 text-blue-400 text-[10px] font-bold rounded uppercase">Active Tool</span>
                    </div>

                    <p class="text-slate-400 text-sm leading-relaxed mb-8">
                        Track enemy summoner spell cooldowns in real-time. Supports Summoner Haste calculations for Cosmic Insight and Ionian Boots.
                    </p>

                    <div class="inline-flex items-center text-blue-400 font-bold text-xs uppercase tracking-widest group-hover:translate-x-2 transition-transform">
                        Launch Tracker
                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                        </svg>
                    </div>
                </div>
            </NavLink>

            @* Placeholder Card (For future tools) *@
            <div class="bg-slate-900/40 rounded-3xl border border-dashed border-slate-800 flex flex-col items-center justify-center p-8 opacity-40 grayscale group">
                <div class="w-16 h-16 bg-slate-800 rounded-2xl mb-6 flex items-center justify-center">
                    <svg class="w-8 h-8 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                </div>
                <h2 class="text-lg font-bold text-slate-600 uppercase tracking-tighter italic">More Tools Coming Soon</h2>
                <p class="text-slate-700 text-xs mt-2">Jungle Timers • Gold Tracking • Build Pathing</p>
            </div>

        </div>

        @* Footer info *@
        <div class="pt-12">
            <p class="text-slate-700 text-[10px] uppercase tracking-widest font-bold">
                Not affiliated with Riot Games. Built for competitive play.
            </p>
        </div>

    </div>
</div>

<style>
    @@keyframes shine {
        100% {
            left: 125%;
            opacity: 1;
        }
    }
</style>