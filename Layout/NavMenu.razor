<div class="flex flex-col h-full bg-slate-950 border-r border-slate-800/50 transition-all duration-300">

    @* 1. Header/Logo *@
    <div class="h-20 flex items-center px-4 border-b border-slate-800/50 shrink-0 overflow-hidden">
        <div class="flex items-center gap-3 no-underline group">
            <div class="w-10 h-10 bg-blue-600 rounded-xl flex items-center justify-center shadow-[0_0_15px_rgba(37,99,235,0.4)] shrink-0">
                <span class="text-white font-black italic text-xl">L</span>
            </div>
            @* We wrap text in 'sidebar-text' to hide it when narrow *@
            <div class="flex flex-col sidebar-text">
                <span class="text-xl font-black tracking-tighter text-white italic leading-none">LOOLS</span>
                <span class="text-[9px] font-bold text-blue-500 uppercase tracking-[0.2em]">Dashboard</span>
            </div>
        </div>
    </div>

    @* 2. Navigation Links *@
    <div class="flex-grow overflow-y-auto pt-4">
        <nav class="flex flex-col px-2 gap-2">

            <NavLink class="nav-link-custom" href="" Match="NavLinkMatch.All">
                <div class="icon-box shrink-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                </div>
                <span class="font-bold uppercase tracking-widest text-[11px] sidebar-text">Home</span>
            </NavLink>

            <NavLink class="nav-link-custom" href="summoner-timer">
                <div class="icon-box shrink-0">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <span class="font-bold uppercase tracking-widest text-[11px] sidebar-text">Summoner Tracker</span>
            </NavLink>

            @* Toggle Button at the bottom of the list *@
            <button @onclick="ToggleSidebarGlobal" class="nav-link-custom mt-4 border-t border-slate-900 pt-4 w-full text-left">
                <div class="icon-box shrink-0 bg-slate-900 border-slate-700">
                    <svg class="w-4 h-4 transition-transform duration-500" id="sidebar-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M11 19l-7-7 7-7" />
                    </svg>
                </div>
                <span class="font-bold uppercase tracking-widest text-[11px] sidebar-text">Collapse Menu</span>
            </button>

        </nav>
    </div>

    @* 3. Footer *@
    <div class="p-4 border-t border-slate-900 shrink-0 overflow-hidden sidebar-text">
        <div class="bg-slate-900/50 rounded-xl p-3 border border-slate-800">
            <div class="flex items-center gap-2">
                <div class="w-2 h-2 bg-teal-500 rounded-full animate-pulse"></div>
                <span class="text-[10px] text-slate-300 font-medium whitespace-nowrap">Systems Active</span>
            </div>
        </div>
    </div>
</div>

<style>
    .nav-link-custom {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.75rem;
        border-radius: 0.75rem;
        color: #64748b;
        transition: all 0.2s ease;
        text-decoration: none;
        border: none;
        background: transparent;
        cursor: pointer;
    }

        .nav-link-custom:hover {
            background-color: rgba(30, 41, 59, 0.5);
            color: #f8fafc;
        }

    .icon-box {
        width: 2.5rem;
        height: 2.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #0f172a;
        border: 1px solid #1e293b;
        border-radius: 0.5rem;
    }

    .nav-link-custom.active {
        background-color: rgba(37, 99, 235, 0.1);
        color: #60a5fa;
    }

        .nav-link-custom.active .icon-box {
            border-color: #3b82f6;
            color: #3b82f6;
        }

    /* CSS logic for the narrow state */
    body.sidebar-collapsed .sidebar-text {
        display: none !important;
    }

    body.sidebar-collapsed #sidebar-arrow {
        transform: rotate(180deg);
    }
</style>

@code {
    [Inject] private IJSRuntime JS { get; set; } = default!;
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "hidden md:flex md:flex-col" : "flex flex-col";
    private void ToggleNavMenu() => collapseNavMenu = !collapseNavMenu;

    private async Task ToggleSidebarGlobal()
    {
        await JS.InvokeVoidAsync("eval", "document.body.classList.toggle('sidebar-collapsed')");
    }
}