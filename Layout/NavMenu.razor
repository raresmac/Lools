<div class="flex flex-col h-full bg-slate-950 border-r border-slate-800/50">

    @* 1. Header/Logo *@
    <div class="h-20 flex items-center px-6 border-b border-slate-800/50 shrink-0">
        <a class="flex items-center gap-3 no-underline group" href="">
            <div class="w-10 h-10 bg-blue-600 rounded-xl flex items-center justify-center shadow-[0_0_15px_rgba(37,99,235,0.4)] group-hover:rotate-12 transition-transform">
                <span class="text-white font-black italic text-xl">L</span>
            </div>
            <div class="flex flex-col">
                <span class="text-xl font-black tracking-tighter text-white italic leading-none">LOOLS</span>
                <span class="text-[9px] font-bold text-blue-500 uppercase tracking-[0.2em]">Dashboard</span>
            </div>
        </a>
    </div>

    @* Mobile Toggle (Hidden on Desktop) *@
    <div class="md:hidden absolute top-5 right-5 z-50">
        <button class="text-slate-400 p-2 hover:text-white" @onclick="ToggleNavMenu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
            </svg>
        </button>
    </div>

    @* 2. Navigation Links (This section grows) *@
    <div class="@NavMenuCssClass flex-grow overflow-y-auto pt-4" @onclick="ToggleNavMenu">
        <nav class="flex flex-col px-4 gap-2">

            <NavLink class="nav-link-custom" href="" Match="NavLinkMatch.All">
                <div class="icon-box">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                </div>
                <span class="font-bold uppercase tracking-widest text-[11px]">Home</span>
            </NavLink>

            <NavLink class="nav-link-custom" href="summoner-timer">
                <div class="icon-box">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <span class="font-bold uppercase tracking-widest text-[11px]">Summoner Tracker</span>
            </NavLink>

            <div class="mt-8 px-4 mb-2">
                <span class="text-[10px] font-black text-slate-600 uppercase tracking-[0.2em]">Tools</span>
            </div>

            @* Disabled Placeholder *@
            <div class="flex items-center gap-4 px-4 py-3 text-slate-800 cursor-not-allowed opacity-40">
                <div class="w-8 h-8 flex items-center justify-center border border-slate-800 rounded-lg">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                </div>
                <span class="font-bold uppercase tracking-widest text-[11px]">Jungle Timers</span>
            </div>
        </nav>
    </div>

    @* 3. Footer (Stays at the bottom) *@
    <div class="p-6 border-t border-slate-900 shrink-0">
        <div class="bg-slate-900/50 rounded-xl p-3 border border-slate-800">
            <p class="text-[9px] text-slate-500 font-bold uppercase mb-1">Status</p>
            <div class="flex items-center gap-2">
                <div class="w-2 h-2 bg-teal-500 rounded-full animate-pulse shadow-[0_0_8px_#14b8a6]"></div>
                <span class="text-[10px] text-slate-300 font-medium">Systems Active</span>
            </div>
        </div>
    </div>
</div>

<style>
    .nav-link-custom {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.75rem 1rem;
        border-radius: 0.75rem;
        color: #64748b;
        transition: all 0.2s ease;
        text-decoration: none;
    }

        .nav-link-custom:hover {
            background-color: rgba(30, 41, 59, 0.5);
            color: #f8fafc;
        }

    .icon-box {
        width: 2rem;
        height: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #0f172a;
        border: 1px solid #1e293b;
        border-radius: 0.5rem;
    }

    .nav-link-custom.active {
        background-color: rgba(37, 99, 235, 0.1);
        color: #60a5fa;
    }

        .nav-link-custom.active .icon-box {
            border-color: #3b82f6;
            color: #3b82f6;
        }
</style>

@code {
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "hidden md:flex md:flex-col" : "flex flex-col";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}